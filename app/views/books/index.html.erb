<div class="message">
  <p><%= flash[:notice] %></p>
</div>

<h1>Books</h1>
<table>
  <tr>
    <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </thead>
  </tr>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit" ,edit_book_path(book.id)%></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are yuo sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors has occurred
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<h2>New book</h2>
 <%= form_with model: @book, url: '/books',method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  
 <% end %>